# Slack Bot User OAuth Token (starts with xoxb-)
# Required scopes: channels:write, users:write, users:read, chat:write
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Your Slack workspace/team ID (found in Slack Admin settings)
SLACK_TEAM_ID=T1234567890

# Slack channel ID for logging events (get from channel details)
SLACK_LOG_CHANNEL_ID=C1234567890

# Postmark server API key for sending emails
POSTMARK_API_KEY=your-postmark-api-key-here

# Maximum submissions per window per IP/email (e.g., "5")
RATE_LIMIT=5

# Rate limit window duration in seconds (e.g., "3600" for 1 hour)
RATE_LIMIT_WINDOW_SEC=3600
